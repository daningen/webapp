<?xml version='1.0' encoding='utf-8'?>
<widget id="se.dbwebb.trafik" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Trafik</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="I will use your GPS position to show on a map." />
    </plugin>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>I will use your GPS position to show on a map.</string>
    </edit-config>
    <engine name="browser" spec="^5.0.4" />
    <platform name="ios">
    <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
        <preference name="SplashScreenDelay" value="2000" />
        <!-- <icon src="AppIcon-20@2x.png" />
        <icon src="AppIcon-20@2x~ipad.png" />
        <icon src="AppIcon-20@3x" /> -->
        <icon src="res/icon/ios/AppIcon-60@2x~car.png" width="120" height="120" />
        <icon src="res/icon/ios/AppIcon-60@3x~car.png" width="180" height="180" />
    </platform>
</widget>
